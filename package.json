{
  "name": "fcl-server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node ./lib/main.js",
    "serve": "nodemon -e ts --exec \"npm run build && node ./lib/main.js\"",
    "debug": "nodemon -e ts --exec \"npm run build && node --inspect-brk ./lib/main.js\"",
    "build:qa": "NODE_ENV=qa npm run build",
    "cp:view": "copyfiles -u 1 ./src/**/views/**/* ./lib",
    "tsc": "tsc",
    "compile": "npm run clean && npm run lint && npm run tsc",
    "compile:watch": "npm run clean && npm run lint && npm run tsc -- --watch",
    "build": "npm run compile && npm run cp:view && npm run test",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:e21": "node ./lib/e2e",
    "test:e2e:watch": "nodemon -e ts --exec \"npm run compile && node ./lib/e2e\"",
    "test:all:watch": "nodemon -e ts --exec \"npm run build && node ./lib/e2e\"",
    "test:coverage": "npm test -- --coverage",
    "clean": "rimraf lib/*",
    "lint": "tslint --project tsconfig.json --fix -c tslint.json 'src/**/*.ts'"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testURL": "http://localhost/",
    "testEnvironment": "node"
  },
  "dependencies": {
    "argon2": "^0.19.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "fs-readfile-promise": "^3.0.1",
    "handlebars": "^4.0.11",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "mongoose": "^5.2.6",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.7",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/fs-readfile-promise": "^3.0.0",
    "@types/handlebars": "^4.0.39",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.115",
    "@types/mongoose": "^5.2.3",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.5",
    "@types/nodemailer": "^4.6.2",
    "copyfiles": "^2.0.0",
    "jest": "^23.2.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2"
  }
}
