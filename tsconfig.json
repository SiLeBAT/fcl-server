{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution":"Node",
        "outDir": "lib",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/__mocks__/*.ts",
        "src/**/__tests__/*.ts",
        "test/**/*.ts"
    ]
}
